# Linux-specific environment variables for Pipecat
# Copy this file to .env and modify as needed

# Audio/Video Configuration
PULSE_RUNTIME_PATH=/var/run/pulse
ALSA_CARD=0
DISPLAY=:0

# WebRTC Configuration for Linux
WEBRTC_AUDIO_PROCESSING=1
WEBRTC_ECHO_CANCELLATION=1
WEBRTC_NOISE_SUPPRESSION=1
WEBRTC_AUTO_GAIN_CONTROL=1

# FFmpeg Configuration
FFMPEG_BINARY=/usr/bin/ffmpeg
FFPROBE_BINARY=/usr/bin/ffprobe

# System Audio Configuration
AUDIO_BACKEND=pulse
AUDIO_DEVICE_INPUT=default
AUDIO_DEVICE_OUTPUT=default
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BUFFER_SIZE=1024

# Performance Tuning for Linux
OMP_NUM_THREADS=4
OPENBLAS_NUM_THREADS=4
NUMBA_NUM_THREADS=4

# Debug flags (set to 0 for production)
PIPECAT_DEBUG=1
WEBRTC_DEBUG=1

# Your existing API keys
GEMINI_API_KEY=your_gemini_api_key_here
RIME_API_KEY=your_rime_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
